<%= simple_form_for([@shot, @shot.comments.build]) do |f| %>
  <div class="field">
        <div class="control">
            <%= f.input :name, input_html: { class: 'form-control'}, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%= f.input :response, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>

    <br>
    <br>
    
    <%= f.button :submit, 'Leave a reply', class: 'btn btn-primary rose' %>



<% end %>
