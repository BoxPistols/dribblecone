<div class="container">


<h2 class="login">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="columns is-centered">
    <div class="column is-half">

<div class="col-md-4">
<div class="field">
<div class="control">
    <%= f.input :name, input_html: { class: 'form-control'}, wrapper: false,
    label_html: { class: 'label'} %>

</div>
</div>

    <%= f.input :email, input_html: { class: 'form-control'}, wrapper: false,
    label_html: { class: 'label'}, required: true, autofocus: true %>
    <%= f.input :password, input_html: { class: 'form-control'}, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions buttonlogin">
    <%= f.button :submit, "Log in", class: 'btn btn-dark' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>
